<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundoTela"
    tools:context=".TelaLoading1_3">

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="@string/TextMultiCorLoading3"
        android:textSize="26dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:shadowColor="@color/corRoxaSombraLoading"
        android:shadowDx="3"
        android:shadowDy="15"
        android:textColor="#A581B0"
        android:shadowRadius="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48"/>

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:backgroundTint="#6cd394"
        android:onClick="IniciarTelaOpcoes"
        android:text="Aventure-se"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitulo"
        app:layout_constraintVertical_bias="0.701"/>

</androidx.constraintlayout.widget.ConstraintLayout>